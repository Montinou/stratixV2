# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:port/database?sslmode=require"
DATABASE_URL_UNPOOLED="postgresql://username:password@hostname:port/database?sslmode=require"

# Stack Auth Configuration
NEXT_PUBLIC_STACK_PROJECT_ID="your-stack-project-id"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="pck_xxxxxxxxxxxxx"
STACK_SECRET_SERVER_KEY="ssk_xxxxxxxxxxxxx"

# AI Gateway Configuration
AI_GATEWAY_API_KEY="vck_xxxxxxxxxxxxx"

# Neon Database Configuration
NEON_API_KEY="napi_xxxxxxxxxxxxx"
NEON_PROJECT_ID="your-neon-project-id"

# Direct Postgres Configuration
PGDATABASE="neondb"
PGHOST="your-host.neon.tech"
PGUSER="neondb_owner"
PGPASSWORD="your-password"

# Optional Authenticated Database URLs (for RLS)
DATABASE_AUTHENTICATED_URL="postgresql://username:password@hostname:port/database?sslmode=require"
NEXT_PUBLIC_DATABASE_AUTHENTICATED_URL="postgresql://username:password@hostname:port/database?sslmode=require"

# Environment
NODE_ENV="development"

# Optional: Vercel Configuration
VERCEL_OIDC_TOKEN="your-vercel-token"

# Email Configuration (Required for invitations)
BREVO_API_KEY="xkeysib-xxxxxxxxxxxxx"
BREVO_SENDER_EMAIL="noreply@stratix.com"
BREVO_SENDER_NAME="Stratix OKR Platform"

# Cron Jobs (Production only)
CRON_SECRET="your-secure-cron-secret"

# Feature Flags - AI Automation (Default: disabled)
# Enable individual automation features
FEATURE_AI_DAILY_OKR_ANALYSIS="false"      # Análisis automático diario de OKRs
FEATURE_AI_SMART_REMINDERS="false"         # Recordatorios inteligentes
FEATURE_AI_WEEKLY_REPORTS="false"          # Reportes semanales automáticos
FEATURE_AI_AUTO_INSIGHTS="false"           # Generación automática de insights
FEATURE_AI_RISK_DETECTION="false"          # Detección automática de riesgos

# Experimental Features (Use with caution)
FEATURE_AI_PREDICTIVE_ANALYTICS="false"    # Analítica predictiva
FEATURE_AI_AUTO_SUGGESTIONS="false"        # Sugerencias automáticas