# NeonDB Database Configuration
# Get these values from your Neon console: https://console.neon.tech/

# Primary Database URL (pooled connection - recommended for most operations)
DATABASE_URL="postgresql://username:password@host-pooler.region.aws.neon.tech/database?sslmode=require"

# Unpooled Database URL (direct connection - for migrations and schema operations)
DATABASE_URL_UNPOOLED="postgresql://username:password@host.region.aws.neon.tech/database?sslmode=require"

# Neon Project ID (found in Neon console)
NEON_PROJECT_ID="your-project-id"

# PostgreSQL Standard Variables (for compatibility)
PGDATABASE="database_name"
PGHOST="host-pooler.region.aws.neon.tech"
PGHOST_UNPOOLED="host.region.aws.neon.tech"
PGPASSWORD="your_password"
PGUSER="username"

# Additional PostgreSQL Variables (alternative naming conventions)
POSTGRES_DATABASE="database_name"
POSTGRES_HOST="host-pooler.region.aws.neon.tech"
POSTGRES_PASSWORD="your_password"
POSTGRES_PRISMA_URL="postgresql://username:password@host-pooler.region.aws.neon.tech/database?connect_timeout=15&sslmode=require"
POSTGRES_URL="postgresql://username:password@host-pooler.region.aws.neon.tech/database?sslmode=require"
POSTGRES_URL_NON_POOLING="postgresql://username:password@host.region.aws.neon.tech/database?sslmode=require"
POSTGRES_URL_NO_SSL="postgresql://username:password@host-pooler.region.aws.neon.tech/database"
POSTGRES_USER="username"

# NeonAuth (Stack) Configuration
# Get these values from your Stack console: https://app.stackframe.io/

# Stack Project ID (public - safe to expose in client-side code)
NEXT_PUBLIC_STACK_PROJECT_ID="your-stack-project-id"

# Stack Publishable Client Key (public - safe to expose in client-side code)
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="pck_your_publishable_client_key"

# Stack Secret Server Key (private - keep secret, server-side only)
STACK_SECRET_SERVER_KEY="ssk_your_secret_server_key"

# Vercel AI Gateway Configuration
# Get your AI Gateway API key from Vercel dashboard
AI_GATEWAY_API_KEY="your_vercel_ai_gateway_api_key"

# Vercel Configuration (for deployment)
# This is automatically set by Vercel during deployment
VERCEL_OIDC_TOKEN="auto_generated_by_vercel"